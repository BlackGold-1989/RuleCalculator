<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorTextBlack</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/kaiti</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="lbl_black_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/kaiti</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="lbl_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/kaiti</item>
    </style>

    <style name="lbl_content.white">
        <item name="android:textColor">@color/colorMainWhite</item>
    </style>

    <style name="lbl_content.black">
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="lbl_content.black.14">
        <item name="android:text">14sp</item>
    </style>

    <style name="lbl_content.green">
        <item name="android:textColor">@color/colorMainGreen</item>
    </style>

    <style name="lbl_content.blue">
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>

    <style name="lbl_content.blue.14">
        <item name="android:text">14sp</item>
    </style>

    <style name="lbl_detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/kaiti</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="lbl_detail.black">
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="lbl_detail.green">
        <item name="android:textColor">@color/colorMainGreen</item>
    </style>

    <style name="lbl_detail.blue">
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>

    <style name="lbl_processing">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorMainWhite</item>
    </style>

    <style name="lbl_processing.will">
        <item name="android:background">@drawable/gray_circle</item>
    </style>

    <style name="lbl_processing.doing">
        <item name="android:background">@drawable/red_circle</item>
    </style>

    <style name="lbl_processing.done">
        <item name="android:background">@drawable/green_circle</item>
    </style>

    <style name="mb_back" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:fontFamily">@font/kaiti</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorMainWhite</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="mb_back.green">
        <item name="backgroundTint">@color/colorMainGreen</item>
    </style>

    <style name="mb_back.red">
        <item name="backgroundTint">@color/colorMainRed</item>
    </style>

    <style name="mb_item" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorMainWhite</item>
        <item name="backgroundTint">@color/colorMainGreen</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="mt_back" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/kaiti</item>
        <item name="boxBackgroundColor">@color/colorMainWhite</item>
        <item name="boxStrokeColor">@color/colorMainGreen</item>
        <item name="endIconTint">@color/colorTextBlack</item>
        <item name="hintTextColor">@color/colorMainGreen</item>
        <item name="helperTextTextColor">@color/colorMainRed</item>
        <item name="android:textColorHint">@color/colorTextBlack</item>
    </style>

    <style name="mt_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/kaiti</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="llt_floating">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">5dp</item>
        <item name="android:background">@drawable/green_circle</item>
    </style>

    <style name="lbl_floating">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">+</item>
        <item name="android:textColor">@color/colorMainWhite</item>
        <item name="android:textSize">36dp</item>
    </style>

    <style name="llt_spec_line">
        <item name="android:layout_width">0sp</item>
        <item name="android:layout_height">1sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">5sp</item>
        <item name="android:layout_marginRight">5sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/colorTextBlack</item>
    </style>

    <style name="llt_profile">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/white_12</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="llt_profile_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@drawable/green_12</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="img_profile_btn">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:src">@drawable/ic_right_white</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="txt_profile">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/kaiti</item>
    </style>

    <style name="llt_wechat_pay">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/white_12</item>
        <item name="android:elevation">2dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="img_wechat_pay">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_buy_func</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    /**
    微信登录
    */
    <style name="wx_login_style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="NavPage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">#FFE1E8EB</item>
    </style>

</resources>
