<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorFrgBack">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:background="@drawable/white_12"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:id="@+id/img_profile_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_marginStart="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lbl_profile_name"
                        style="@style/lbl_content.black"
                        android:textAlignment="center"
                        android:text="@string/nav_name" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/lbl_detail.black"
                        android:text="用户身份：" />

                    <TextView
                        android:id="@+id/lbl_profile_location"
                        android:alpha="0.5"
                        style="@style/lbl_detail.black"
                        android:text="@string/nav_location" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/lbl_detail.black"
                        android:text="修改日期：" />

                    <TextView
                        android:id="@+id/lbl_profile_regdate"
                        android:alpha="0.5"
                        style="@style/lbl_detail.black"
                        android:text="@string/result_date" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout style="@style/llt_profile">

                <TextView
                    android:layout_marginTop="8dp"
                    android:id="@+id/lbl_profile_func"
                    style="@style/lbl_content.black"
                    android:gravity="center"
                    android:text="120"/>

                <TextView
                    android:layout_marginBottom="8dp"
                    style="@style/lbl_content.black"
                    android:alpha="0.5"
                    android:gravity="center"
                    android:text="@string/nav_lbl_func"/>

            </LinearLayout>

            <LinearLayout style="@style/llt_profile">

                <TextView
                    android:id="@+id/lbl_profile_rfunc"
                    style="@style/lbl_content.black"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="24 K"/>

                <TextView
                    style="@style/lbl_content.black"
                    android:layout_marginBottom="8dp"
                    android:alpha="0.5"
                    android:gravity="center"
                    android:text="@string/nav_lbl_rfunc"/>

            </LinearLayout>

            <LinearLayout style="@style/llt_profile">

                <TextView
                    android:id="@+id/lbl_profile_payed"
                    style="@style/lbl_content.black"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="140"/>

                <TextView
                    style="@style/lbl_content.black"
                    android:layout_marginBottom="8dp"
                    android:alpha="0.5"
                    android:gravity="center"
                    android:text="@string/nav_lbl_pay"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="24dp"
            style="@style/lbl_content.black"
            android:text="项目管理"
            android:textColor="@color/colorTextBlack"/>

        <LinearLayout
            android:id="@+id/llt_profile_pay"
            style="@style/llt_profile_btn"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_marginLeft="20sp"
                style="@style/lbl_content.white"
                android:gravity="center_vertical"
                android:text="@string/profile_wechat_payment"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageView style="@style/img_profile_btn"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llt_profile_report"
            style="@style/llt_profile_btn"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_marginLeft="20sp"
                style="@style/lbl_content.white"
                android:gravity="center_vertical"
                android:text="@string/profile_function_report"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageView style="@style/img_profile_btn"/>
        </LinearLayout>

        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="24dp"
            style="@style/lbl_content.black"
            android:text="关于申请"
            android:textColor="@color/colorTextBlack"/>

        <LinearLayout
            android:id="@+id/llt_profile_guide"
            style="@style/llt_profile_btn"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_marginLeft="20sp"
                style="@style/lbl_content.white"
                android:gravity="center_vertical"
                android:text="@string/guide_title"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageView style="@style/img_profile_btn"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llt_profile_support"
            style="@style/llt_profile_btn"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_marginLeft="20sp"
                style="@style/lbl_content.white"
                android:gravity="center_vertical"
                android:text="@string/profile_support"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageView style="@style/img_profile_btn"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/llt_profile_logout"
            style="@style/llt_profile_btn"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/red_12">

            <TextView
                style="@style/lbl_content.white"
                android:layout_marginStart="20dp"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:text="@string/menu_logout"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llt_profile_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:elevation="3dp"
            android:gravity="center"
            android:background="@drawable/white_circle" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_edit" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llt_profile_payhistory"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="115dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:elevation="3dp"
            android:gravity="center"
            android:background="@drawable/white_circle">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_edit" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
