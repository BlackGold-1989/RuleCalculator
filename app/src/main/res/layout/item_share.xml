<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_4"
        android:elevation="2dp">

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/lbl_item_index"
                android:layout_margin="8dp"
                style="@style/lbl_content.black.14"
                android:text="1. "
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lbl_item_name"
                style="@style/lbl_content.black.14"
                android:text="Function Name"/>

            <TextView
                android:id="@+id/lbl_item_date"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:alpha="0.5"
                style="@style/lbl_detail.black"
                android:text="2019-05-11 00:00:00"/>

            <LinearLayout
                android:id="@+id/llt_item_user"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_12"
                android:elevation="2dp"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="8dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/img_user_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/lbl_user_name"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    style="@style/lbl_content.black"
                    android:text="User Name"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llt_item_calc_btn"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_item_calc"
                style="@style/mb_back.green"
                android:text="@string/common_calculate"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
